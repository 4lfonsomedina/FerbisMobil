<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Ferbis</name>
    <description>
        Ferbis a domicilio
    </description>
    <author email="sistemas@ferbis.com" href="http://ferbis.com">
        Ing. Alfonso Medina Duran
    </author>
    <content src="index.html" />
    <allow-navigation href="http://*/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon qualifier="ldpi" src="www/img/icon/android/ldpi.png" />
    <icon qualifier="mdpi" src="www/img/icon/android/mdpi.png" />
    <icon qualifier="hdpi" src="www/img/icon/android/hdpi.png" />
    <icon qualifier="xhdpi" src="www/img/icon/android/xhdpi.png" />
    <icon qualifier="xxhdpi" src="www/img/icon/android/xxhdpi.png" />
    <icon qualifier="xxxhdpi" src="www/img/icon/ios/icon-72@2x.png" />
    <splash qualifier="port-ldpi" src="www/img/screen/android/drawable-port-ldpi-screen.png" />
    <splash qualifier="land-ldpi" src="www/img/screen/android/drawable-land-ldpi-screen.png" />
    <splash qualifier="port-mdpi" src="www/img/screen/android/drawable-port-mdpi-screen.png" />
    <splash qualifier="land-mdpi" src="www/img/screen/android/drawable-land-mdpi-screen.png" />
    <splash qualifier="port-hdpi" src="www/img/screen/android/drawable-port-hdpi-screen.png" />
    <splash qualifier="land-hdpi" src="www/img/screen/android/drawable-land-hdpi-screen.png" />
    <splash qualifier="port-xhdpi" src="www/img/screen/android/drawable-port-xhdpi-screen.png" />
    <splash qualifier="land-xhdpi" src="www/img/screen/android/drawable-land-xhdpi-screen.png" />
    <splash qualifier="port-xxhdpi" src="www/img/screen/android/drawable-port-xxhdpi-screen.png" />
    <splash qualifier="land-xxhdpi" src="www/img/screen/android/drawable-land-xxhdpi-screen.png" />
    <splash qualifier="port-xxxhdpi" src="www/img/screen/android/drawable-port-xxxhdpi-screen.png" />
    <splash qualifier="land-xxxhdpi" src="www/img/screen/android/drawable-land-xxxhdpi-screen.png" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
