<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.sd_ferbis" version="1.0.06" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Ferbis a domicilio </name>
    <description>
        Ferbis a domicilio
    </description>
    <author email="sistemas@ferbis.com" href="http://ferbis.com">
        Ing. Alfonso Medina Duran
    </author>
    <content src="index.html" />
    
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="28" />
    
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.3" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.1" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" />

    <allow-navigation href="http://*/*" />
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />


    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/img/icon/ios/icon.png" width="57" height="57" />
        <icon src="www/img/icon/ios/icon-72@2x.png" width="144" height="144" />
        <icon src="www/img/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="www/img/icon/ios/icon-50.png" width="50" height="50" />
        <icon src="www/img/icon/ios/icon-50@2x.png" width="100" height="100" />
        <icon src="www/img/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="www/img/icon/ios/icon-60@2x.png" width="120" height="120" />
        <icon src="www/img/icon/ios/icon-60@3x.png" width="180" height="180" />
        <icon src="www/img/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="www/img/icon/ios/icon-76@2x.png" width="152" height="152" />
        <icon src="www/img/icon/ios/icon-small.png" width="29" height="29" />
        <icon src="www/img/icon/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="www/img/icon/ios/icon-small@3x.png" width="87" height="87" />
        <icon src="www/img/icon/ios/icon-small-40.png" width="40" height="40" />
        <icon src="www/img/icon/ios/icon-small-40@2x.png" width="80" height="80" />
        </platform>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/icon/android/ldpi.png" qualifier="ldpi" />
        <icon src="www/img/icon/android/mdpi.png" qualifier="mdpi" />
        <icon src="www/img/icon/android/hdpi.png" qualifier="hdpi" />
        <icon src="www/img/icon/android/xhdpi.png" qualifier="xhdpi" />
        <icon src="www/img/icon/android/xxhdpi.png" qualifier="xxhdpi" />
        <icon src="www/img/icon/android/xxxhdpi.png" qualifier="xxxhdpi" />
    </platform>
</widget>
