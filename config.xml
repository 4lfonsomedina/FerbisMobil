<?xml version='1.0' encoding='utf-8'?>
<widget id="ferbis.com" version="1.1.00" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Ferbis</name>
    <description>
        Ferbis
    </description>
    <author email="sistemas@ferbis.com" href="http://ferbis.com">
        Ing. Alfonso Medina Duran
    </author>
    <content src="index.html" />

    <preference name="phonegap-version" value="cli-10.0.0" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="29" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#C7C7C7" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarDefaultScrollToTop" value="false" />
    <preference name="SplashScreen" value="none"/>
    <feature name="CDVWKWebViewEngine">
    <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />

    
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3" 
        value="Necesario para guardar la sesión del cliente"/>
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.3" 
        value="Necesario para saber a donde enviar su pedido"/>
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" 
        value="Necesario para consultar catalogo de productos"/>
    <plugin name="cordova-plugin-statusbar" spec="~2.4.3" source="npm" 
        value="Necesario para cambiar color de la barra"/>
    <plugin name="cordova-plugin-inappbrowser" spec="~3.2.0" source="npm" 
        value="Necesario para navegar entre ventanas"/>


    <allow-navigation href="http://*/*" />
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <icon src="www/img/icon/ios/icon.png" />

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <preference name="WKWebViewOnly" value="true" />
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />

        <edit-config target="NSLocationAlwaysUsageDescription" file="*-Info.plist" mode="overwrite">
            <string>La Aplicación necesita permiso de ubicación para envio de pedido de compra.</string>
        </edit-config>
        <edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="overwrite">
            <string>La Aplicación necesita permiso de ubicacion para envio de pedido de compra.</string>
        </edit-config>
        <edit-config target="NSPhotoLibraryUsageDescription" file="*-Info.plist" mode="overwrite">
            <string>La Aplicación necesita permiso de memoria para almacenar datos de sesión.</string>
        </edit-config>

        <icon src="www/img/icon/ios/icon.png" width="57" height="57" />
        <icon src="www/img/icon/ios/icon-72@2x.png" width="144" height="144" />
        <icon src="www/img/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="www/img/icon/ios/icon-small-50.png" width="50" height="50" />
        <icon src="www/img/icon/ios/icon-small-50@2x.png" width="100" height="100" />
        <icon src="www/img/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="www/img/icon/ios/icon-60@2x.png" width="120" height="120" />
        <icon src="www/img/icon/ios/icon-60@3x.png" width="180" height="180" />
        <icon src="www/img/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="www/img/icon/ios/icon-76@2x.png" width="152" height="152" />
        <icon src="www/img/icon/ios/icon-small.png" width="29" height="29" />
        <icon src="www/img/icon/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="www/img/icon/ios/icon-small@3x.png" width="87" height="87" />
        <icon src="www/img/icon/ios/icon-small-40.png" width="40" height="40" />
        <icon src="www/img/icon/ios/icon-small-40@2x.png" width="80" height="80" />
        <icon src="www/img/icon/ios/icon-167.png" width="167" height="167"/>
        <icon src="www/img/icon/ios/icon-1024.png" width="1024" height="1024" />

        <splash src="www/img/screen/ios/Default@3x~iphone~comany.png" width="1242" height="2208" /> 
        <splash src="www/img/screen/ios/Default@2x~iphone~comany.png" width="750" height="1334" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/img/icon/android/ldpi.png"/>
        <icon density="mdpi" src="www/img/icon/android/mdpi.png"/>
        <icon density="hdpi" src="www/img/icon/android/hdpi.png"/>
        <icon density="xhdpi" src="www/img/icon/android/xhdpi.png"/>
        <icon density="xxhdpi" src="www/img/icon/android/xxhdpi.png"/>
        <icon density="xxxhdpi" src="www/img/icon/android/xxxhdpi.png"/>

        <splash src="www/img/screen/android/splash-port-mdpi.png" qualifier="land-mdpi" />
        <splash src="www/img/screen/android/splash-port-hdpi.png" qualifier="land-hdpi" />
        <splash src="www/img/screen/android/splash-port-xhdpi.png" qualifier="land-xhdpi" />
        <splash src="www/img/screen/android/splash-port-xxhdpi.png" qualifier="land-xxhdpi" />
        <splash src="www/img/screen/android/splash-port-xxxhdpi.png" qualifier="land-xxxhdpi" />
    </platform>
</widget>
